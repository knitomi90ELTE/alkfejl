{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Elérhető tárgyak</h1>
</div>

<div align=right>
    <p class="lead">Belépve mint</p>
    {{user.surname}} {{user.forename}} - {{user.mtra}}
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Név</th>
            <th>Terem</th>
            <th>Leírás</th>
            <th>Státusz</th>
            <th>Létrehozta</th>
            <th></th><!-- Ez csak a design miatt van itt -->
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{subjectName}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{room}}</td>
            <td>{{description}}</td>
            <td>{{creator}}</td>
            <td>
                {{#if picked}}
                    <a class="btn btn-xs btn-danger {{#unless status}}disabled{{/unless }}" data-toggle="tooltip" data-placement="top" title="Leadás" href='remove/{{id}}'>Leadás</a>
                {{else}}
                    <a class="btn btn-xs btn-primary {{#unless status}}disabled{{/unless }}" data-toggle="tooltip" data-placement="top" title="Felvesz" href='add/{{id}}'>Felvesz</a>
                {{/if}}
                
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>