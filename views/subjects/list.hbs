{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Elérhető tárgyak</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Név</th>
            <th>Terem</th>
            <th>leírás</th>
            <th>Státusz</th>
            <th>Létrehozta</th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{subjectName}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{room}}</td>
            <td>{{description}}</td>
            <td>{{user}}</td>
            <td align="right">
                {{#if picked}}
                    <a class="btn btn-xs btn-danger {{#unless status}}disabled{{/unless }}" data-toggle="tooltip" data-placement="top" title="Törlés" href='remove/{{id}}'>Leadás</a>
                {{else}}
                    <a class="btn btn-xs btn-primary {{#unless status}}disabled{{/unless }}" data-toggle="tooltip" data-placement="top" title="Törlés" href='add/{{id}}'>Felvesz</a>
                {{/if}}
                
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>